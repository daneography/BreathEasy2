<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uofsc.com.breatheasynologin.mindfulnessFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 1"
                android:textAlignment="center"
                android:textSize="60px"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white" />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 2"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 3"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 4"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 5"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 6"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek7"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 7"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek8"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 8"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
